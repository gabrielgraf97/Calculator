<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:accessibilityHeading="false"
    android:background="#000000"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/idEqual"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="#7C0606"
        android:fontFamily="sans-serif-medium"
        android:onClick="equal"
        android:text="="
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        android:typeface="normal"
        app:cornerRadius="90dp"
        app:layout_constraintEnd_toStartOf="@+id/idMultiply"
        app:layout_constraintTop_toBottomOf="@+id/idThree" />

    <Button
        android:id="@+id/idZero"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#221D1D"
        android:fontFamily="sans-serif-medium"
        android:onClick="numbers"
        android:text="0"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        android:typeface="normal"
        app:cornerRadius="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idOne" />

    <Button
        android:id="@+id/idHistory"
        android:layout_width="192dp"
        android:layout_height="90dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#454141"
        android:fontFamily="sans-serif-medium"
        android:onClick="accessHistory"
        android:text="HISTORY"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30sp"
        android:typeface="normal"
        app:cornerRadius="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idPoint" />

    <Button
        android:id="@+id/idClear"
        android:layout_width="192dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#454141"
        android:fontFamily="sans-serif-medium"
        android:onClick="clear"
        android:text="CLEAR"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30sp"
        android:typeface="normal"
        app:cornerRadius="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idEqual" />

    <Button
        android:id="@+id/idMultiply"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="6dp"
        android:backgroundTint="#7C0606"
        android:fontFamily="sans-serif-medium"
        android:onClick="operators"
        android:text="x"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        android:typeface="normal"
        app:cornerRadius="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idDivide" />

    <Button
        android:id="@+id/idPoint"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#221D1D"
        android:fontFamily="sans-serif-medium"
        android:onClick="numbers"
        android:text="."
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        android:typeface="normal"
        app:cornerRadius="90dp"
        app:layout_constraintStart_toEndOf="@+id/idZero"
        app:layout_constraintTop_toBottomOf="@+id/idTwo" />

    <Button
        android:id="@+id/idThree"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="#221D1D"
        android:fontFamily="sans-serif-medium"
        android:onClick="numbers"
        android:text="3"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        android:typeface="normal"
        app:cornerRadius="90dp"
        app:layout_constraintEnd_toStartOf="@+id/idDivide"
        app:layout_constraintTop_toBottomOf="@+id/idSix" />

    <Button
        android:id="@+id/idOne"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#221D1D"
        android:fontFamily="sans-serif-medium"
        android:onClick="numbers"
        android:text="1"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        android:typeface="normal"
        app:cornerRadius="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idFour" />

    <Button
        android:id="@+id/idDivide"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="6dp"
        android:backgroundTint="#7C0606"
        android:fontFamily="sans-serif-medium"
        android:onClick="operators"
        android:text="รท"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        android:typeface="normal"
        app:cornerRadius="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idLess" />

    <Button
        android:id="@+id/idTwo"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#221D1D"
        android:fontFamily="sans-serif-medium"
        android:onClick="numbers"
        android:text="2"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        android:typeface="normal"
        app:cornerRadius="90dp"
        app:layout_constraintStart_toEndOf="@+id/idOne"
        app:layout_constraintTop_toBottomOf="@+id/idFive" />

    <Button
        android:id="@+id/idFour"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#221D1D"
        android:fontFamily="sans-serif-medium"
        android:onClick="numbers"
        android:text="4"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        android:typeface="normal"
        app:cornerRadius="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idSeven" />

    <Button
        android:id="@+id/idSix"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="#221D1D"
        android:fontFamily="sans-serif-medium"
        android:onClick="numbers"
        android:text="6"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        android:typeface="normal"
        app:cornerRadius="90dp"
        app:layout_constraintEnd_toStartOf="@+id/idLess"
        app:layout_constraintTop_toBottomOf="@+id/idNine" />

    <Button
        android:id="@+id/idLess"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="6dp"
        android:backgroundTint="#7C0606"
        android:fontFamily="sans-serif-medium"
        android:onClick="operators"
        android:text="-"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        android:typeface="normal"
        app:cornerRadius="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idPlus" />

    <Button
        android:id="@+id/idFive"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#221D1D"
        android:fontFamily="sans-serif-medium"
        android:onClick="numbers"
        android:text="5"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        android:typeface="normal"
        app:cornerRadius="90dp"
        app:layout_constraintStart_toEndOf="@+id/idFour"
        app:layout_constraintTop_toBottomOf="@+id/idEight" />

    <Button
        android:id="@+id/idSeven"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#221D1D"
        android:fontFamily="sans-serif-medium"
        android:onClick="numbers"
        android:text="7"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        android:typeface="normal"
        app:cornerRadius="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDisplay" />

    <TextView
        android:id="@+id/txtDisplay"
        android:layout_width="387dp"
        android:layout_height="67dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/idPlus"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="6dp"
        android:backgroundTint="#7C0606"
        android:fontFamily="sans-serif-medium"
        android:onClick="operators"
        android:text="+"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        android:typeface="normal"
        app:cornerRadius="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDisplay" />

    <Button
        android:id="@+id/idNine"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="#221D1D"
        android:fontFamily="sans-serif-medium"
        android:onClick="numbers"
        android:text="9"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        android:typeface="normal"
        app:cornerRadius="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/idPlus"
        app:layout_constraintTop_toBottomOf="@+id/txtDisplay" />

    <Button
        android:id="@+id/idEight"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#221D1D"
        android:fontFamily="sans-serif-medium"
        android:onClick="numbers"
        android:text="8"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        android:typeface="normal"
        app:layout_constraintStart_toEndOf="@+id/idSeven"
        app:layout_constraintTop_toBottomOf="@+id/txtDisplay"
        app:cornerRadius="90dp" />
</androidx.constraintlayout.widget.ConstraintLayout>