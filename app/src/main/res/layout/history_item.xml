<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/history_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:id="@+id/IdNumber1View"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:text="Number1"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/IdNumber2View"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:text="Number2"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IdNumber1View" />

    <TextView
        android:id="@+id/IdResultView"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:text="Result"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IdNumber2View" />

    <TextView
        android:id="@+id/IdOperatorView"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginEnd="8dp"
        android:text="Operator"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/IdNumber2View"
        app:layout_constraintTop_toBottomOf="@+id/IdNumber1View" />

    <TextView
        android:id="@+id/IdEquals"
        android:layout_width="17dp"
        android:layout_height="43dp"
        android:layout_marginEnd="8dp"
        android:text="="
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/IdResultView"
        app:layout_constraintTop_toBottomOf="@+id/IdOperatorView" />

</androidx.constraintlayout.widget.ConstraintLayout>